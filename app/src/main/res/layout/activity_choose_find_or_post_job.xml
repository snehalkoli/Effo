<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".Apps.Job.Job.Activity.Choose_FindOrPostJob">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="FIND YOUR DREAM JOB"
                    android:textColor="#0C0C0C"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="186dp"
                    android:layout_height="190dp"
                    android:layout_gravity="center"
                    android:padding="30sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/findjob" />

                <Button
                    android:id="@+id/findJob"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:paddingStart="30dp"
                    android:text="Find Job Here"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_arrow_forward_24"
                    app:iconGravity="end"
                    tools:ignore="InvalidId" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:text="HERE THE RIGHT TALENT"
                    android:textColor="#131313"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="277dp"
                    android:layout_height="224dp"
                    android:layout_gravity="center"
                    android:padding="50sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/postjob" />

                <Button
                    android:id="@+id/PostJobHere"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:backgroundTint="@color/appRed"
                    android:paddingStart="30dp"
                    android:text="Post Job Here"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_arrow_forward_24"
                    app:iconGravity="end"
                    tools:ignore="InvalidId" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>