<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView android:layout_width="150dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="15dp"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/categoryBackLinearLayout"
        >

        <TextView
            android:id="@+id/categoryNameInMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Category_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/nav_background_curved"
            android:backgroundTint="#A33A3A36"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>